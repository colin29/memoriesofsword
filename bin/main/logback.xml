<configuration>

	<appender
		name="CONSOLE"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<Pattern>
				%d{HH:mm:ss.SSS} %-5level %logger{25} - %msg%n
			</Pattern>
		</encoder>
	</appender>

	<root level="DEBUG">
		<appender-ref ref="CONSOLE" />
	</root>

	<!-- Particular classes which we want extra info from -->
	
	
	<!-- Particular classes which we want less info from -->
	<logger
		name="colin29.memoriesofsword.game.match.Follower"
		level="DEBUG"></logger>




</configuration>